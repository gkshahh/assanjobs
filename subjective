#include <iostream>
#include <stdlib.h>

#define asize 10
using namespace std;

 
int printRepeating(int arr[], int size)
{  
  int count[size];
  for(int i=0;i<size;i++) 
  {
         count[i]=0;
  } 
  for (int i = 0; i < size; i++)
  {
    count[arr[i]-1]++;
  }
  for(int i=0;i<size;i++) 
  {
         if(count[i]==2)
         {
               return i+1; 
         }              
  } 
  return 0;
}
 
int main()
{
  int arr[asize] ;
  // enter the 100 numbers
  for(int i=0;i<asize;i++)
  {
      cin>>arr[i];
  }
  cout<<printRepeating(arr, asize);
  getchar();
  return 0;
}



